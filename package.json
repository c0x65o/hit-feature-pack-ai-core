{
  "name": "@hit/feature-pack-ai-assistant",
  "version": "1.0.52",
  "description": "Global AI assistant overlay for HIT apps (shell-level).",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./pages/*": {
      "types": "./dist/pages/*.d.ts",
      "import": "./dist/pages/*.js",
      "require": "./dist/pages/*.js",
      "default": "./dist/pages/*.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js",
      "require": "./dist/components/*.js",
      "default": "./dist/components/*.js"
    },
    "./server/api/*": {
      "types": "./dist/server/api/*.d.ts",
      "import": "./dist/server/api/*.js",
      "require": "./dist/server/api/*.js",
      "default": "./dist/server/api/*.js"
    },
    "./server/lib/*": {
      "types": "./dist/server/lib/*.d.ts",
      "import": "./dist/server/lib/*.js",
      "require": "./dist/server/lib/*.js",
      "default": "./dist/server/lib/*.js"
    },
    "./server/*": {
      "types": "./dist/server/*.d.ts",
      "import": "./dist/server/*.js",
      "require": "./dist/server/*.js",
      "default": "./dist/server/*.js"
    }
  },
  "files": [
    "dist",
    "src",
    "feature-pack.yaml"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@hit/ui-kit": "*",
    "next": "15.5.9",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "@hit/ui-kit": "file:../../packages/hit-ui-kit-ts",
    "@types/node": "^20",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "next": "^15.5.9",
    "typescript": "^5",
    "zod": "^4.3.2"
  },
  "license": "MIT"
}
